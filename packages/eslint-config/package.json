{
  "name": "@protomolecule/eslint-config",
  "version": "1.0.0",
  "description": "Shared ESLint configuration for Protomolecule projects",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf node_modules dist",
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "format": "npx prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@protomolecule/tsconfig": "workspace:*",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.12.12",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "eslint": "^8.57.0 || ^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "eslint-config-canonical": "^45.0.0",
    "typescript-eslint": "^8.42.0"
  }
}
