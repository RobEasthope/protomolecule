{
  "name": "@protomolecule/eslint-config",
  "version": "2.1.3",
  "description": "Shared ESLint configuration for Protomolecule projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/RobEasthope/protomolecule.git",
    "directory": "packages/eslint-config"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf node_modules dist",
    "format": "npx prettier --write .",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --cache --cache-location ../../.turbo/.eslintcache-eslint-config",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --fix --cache --cache-location ../../.turbo/.eslintcache-eslint-config",
    "lint:fix-staged": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --fix --max-warnings=Infinity --cache --cache-location ../../.turbo/.eslintcache-eslint-config || true",
    "lint:md": "markdownlint-cli2 '**/*.md' '!**/node_modules/**'",
    "lint:md:fix": "markdownlint-cli2 '**/*.md' '!**/node_modules/**' --fix",
    "prepublishOnly": "pnpm run build",
    "sort-pkg-json": "npx sort-package-json",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "astro-eslint-parser": "^1.0.0",
    "eslint-config-canonical": "^45.0.0",
    "eslint-plugin-astro": "^1.0.0",
    "typescript-eslint": "^8.42.0"
  },
  "devDependencies": {
    "@protomolecule/tsconfig": "workspace:*",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.12.12",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "eslint": "^8.57.0 || ^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
