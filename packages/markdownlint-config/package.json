{
  "name": "@robeasthope/markdownlint-config",
  "version": "1.1.0",
  "description": "Shared markdownlint configuration for consistent Markdown formatting",
  "keywords": [
    "markdownlint",
    "markdown",
    "linting",
    "formatting",
    "code-quality",
    "style-guide"
  ],
  "homepage": "https://github.com/RobEasthope/protomolecule#readme",
  "bugs": {
    "url": "https://github.com/RobEasthope/protomolecule/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RobEasthope/protomolecule.git",
    "directory": "packages/markdownlint-config"
  },
  "license": "MIT",
  "author": {
    "name": "Rob Easthope",
    "url": "https://github.com/RobEasthope"
  },
  "main": ".markdownlint.json",
  "files": [
    ".markdownlint.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf node_modules",
    "format": "npx prettier --write .",
    "lint:md": "markdownlint-cli2 '**/*.{md,mdx}' '!**/node_modules/**' '!**/dist/**' '!**/.turbo/**' '!**/.astro/**'",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.{md,mdx}' '!**/node_modules/**' '!**/dist/**' '!**/.turbo/**' '!**/.astro/**'",
    "sort-pkg-json": "npx sort-package-json"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.18.1",
    "rimraf": "^6.0.1"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
