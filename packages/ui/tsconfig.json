{
  "extends": "@protomolecule/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/utils/*": ["./utils/*"],
      "@/*": ["./*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["**/*.ts", "**/*.tsx", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "storybook-static", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "test-setup.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}