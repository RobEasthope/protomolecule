{
  "name": "@robeasthope/ui",
  "version": "4.1.0",
  "description": "React component library with Storybook, Tailwind CSS v4, and Sanity CMS integration",
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "tailwindcss",
    "storybook",
    "component-library",
    "typescript",
    "sanity",
    "portable-text"
  ],
  "homepage": "https://github.com/RobEasthope/protomolecule#readme",
  "bugs": {
    "url": "https://github.com/RobEasthope/protomolecule/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RobEasthope/protomolecule.git",
    "directory": "packages/ui"
  },
  "license": "MIT",
  "author": {
    "name": "Rob Easthope",
    "url": "https://github.com/RobEasthope"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build --config vite.config.build.ts",
    "build-storybook": "storybook build",
    "clean": "rimraf node_modules",
    "dev": "storybook dev -p 6006 --no-open",
    "format": "npx prettier --write .",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --fix --cache --cache-location ../../.turbo/.eslintcache-ui",
    "lint:fix-staged": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --fix --max-warnings=Infinity --cache --cache-location ../../.turbo/.eslintcache-ui || true",
    "lint:md": "markdownlint-cli2",
    "lint:md:fix": "markdownlint-cli2 --fix",
    "prepublishOnly": "pnpm run build",
    "sort-pkg-json": "npx sort-package-json",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@portabletext/react": "^3.1.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@sanity/asset-utils": "^1.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "groq": "^3.52.2",
    "lucide-react": "^0.379.0",
    "next": "^14.2.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.2.1",
    "react-router": "^7.8.2",
    "react-router-dom": "^7.8.2",
    "sanity": "^3.52.0",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@robeasthope/eslint-config": "workspace:*",
    "@robeasthope/markdownlint-config": "workspace:*",
    "@robeasthope/tsconfig": "workspace:*",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-links": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.12.12",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.34.0",
    "happy-dom": "^14.11.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "storybook": "^9.1.10",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
