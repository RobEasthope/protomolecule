{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "emitDeclarationOnly": true,
    "types": ["react", "react-dom"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "eslint.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    ".storybook/**/*",
    "vite.config.ts",
    "vite.config.build.ts",
    "vitest.config.ts",
    "test-setup.ts"
  ],
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "utils/**/*.ts"
  ]
}
