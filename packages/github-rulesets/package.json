{
  "name": "@protomolecule/github-rulesets",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "description": "GitHub configuration rulesets for Protomolecule projects",
  "files": [
    "rulesets"
  ],
  "scripts": {
    "clean": "rimraf node_modules",
    "format": "npx prettier --write .",
    "lint:md": "markdownlint-cli2 '**/*.md' '!**/node_modules/**'",
    "lint:md:fix": "markdownlint-cli2 '**/*.md' '!**/node_modules/**' --fix",
    "sort-pkg-json": "npx sort-package-json"
  },
  "devDependencies": {
    "@protomolecule/tsconfig": "workspace:*",
    "rimraf": "^6.0.1"
  }
}
