{
  "name": "protomolecule",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook --filter=@protomolecule/ui",
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "turbo run dev --filter=@protomolecule/ui",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:fix-staged": "turbo run lint:fix --continue -- --max-warnings=Infinity || true",
    "sort-pkg-json": "npx sort-package-json && turbo run sort-pkg-json",
    "storybook": "turbo run storybook --filter=@protomolecule/ui",
    "test": "turbo run test",
    "test:hooks": "vitest run test/hooks",
    "test:ui": "turbo run test:ui --filter=@protomolecule/ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.12.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,mjs}": [
      "pnpm lint:fix-staged",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "pnpm": ">=9.0.0"
  }
}
