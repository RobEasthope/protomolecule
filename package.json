{
  "name": "protomolecule",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook --filter=@robeasthope/ui",
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "turbo run dev --filter=@robeasthope/ui",
    "format": "pnpm format:root && turbo run format",
    "format:root": "prettier --write '**/*.{js,jsx,ts,tsx,mjs,json,jsonc,md,yml,yaml}' --ignore-path .gitignore --ignore-pattern 'packages/**'",
    "lint": "pnpm lint:root && turbo run lint",
    "lint:fix": "pnpm lint:root:fix && turbo run lint:fix",
    "lint:fix-staged": "pnpm lint:root:fix && turbo run lint:fix-staged",
    "lint:md": "pnpm lint:md:root && turbo run lint:md",
    "lint:md:fix": "pnpm lint:md:root:fix && turbo run lint:md:fix",
    "lint:md:root": "markdownlint-cli2 '!./packages/**'",
    "lint:md:root:fix": "markdownlint-cli2 '!./packages/**' --fix",
    "lint:root": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --ignore-pattern 'packages/**' --cache --cache-location .turbo/.eslintcache-root",
    "lint:root:fix": "eslint '**/*.{js,jsx,ts,tsx,mjs}' --ignore-pattern 'packages/**' --fix --cache --cache-location .turbo/.eslintcache-root",
    "lint:workflows": "npx yaml-lint .github/workflows/*.yml",
    "lint:workflows:fix": "npx prettier --write .github/workflows/*.yml && npx yaml-lint .github/workflows/*.yml",
    "prepare": "husky",
    "sort-pkg-json": "npx sort-package-json && turbo run sort-pkg-json",
    "storybook": "turbo run storybook --filter=@robeasthope/ui",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:hooks": "vitest run .github/scripts",
    "test:ui": "turbo run test:ui --filter=@robeasthope/ui",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "package.json": [
      "npx sort-package-json",
      "prettier --write --ignore-unknown"
    ],
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix --cache --cache-location .turbo/.eslintcache-root"
    ],
    ".github/workflows/*.yml": [
      "npx yaml-lint"
    ],
    "**/*.md": [
      "markdownlint-cli2 --fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@changesets/get-github-info": "^0.6.0",
    "@playwright/test": "^1.55.1",
    "@robeasthope/eslint-config": "workspace:*",
    "@robeasthope/markdownlint-config": "workspace:*",
    "@robeasthope/tsconfig": "workspace:*",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4",
    "yaml-lint": "^1.7.0"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "pnpm": ">=9.0.0"
  }
}
