{
  "extends": "@protomolecule/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node", "vitest/globals"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "*.ts",
    "*.js",
    "*.mjs",
    "scripts/**/*.js",
    "scripts/**/*.mjs",
    "test/**/*.js",
    "test/**/*.ts",
    ".changeset/**/*.js"
  ],
  "exclude": ["node_modules", "packages/**", "dist", ".turbo"]
}
