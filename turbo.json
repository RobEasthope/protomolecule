{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "tsconfig.json", "package.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        ".tsbuildinfo"
      ]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["packages/ui/storybook-static/**", "storybook-static/**"]
    },
    "test": {
      "outputs": []
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "lint:fix-staged": {
      "outputs": []
    },
    "lint:md": {
      "outputs": []
    },
    "lint:md:fix": {
      "outputs": []
    },
    "clean": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "sort-pkg-json": {
      "outputs": []
    }
  }
}
